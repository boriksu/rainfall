#include <stdlib.h>
#include <string.h>

char	*p(char *s, char *str)
{
	char	buffer[4096];

	puts(str);
	read(0, buffer, 4096);
	*strchr(buffer, '\n') = 0;
	return (strncpy(s, buffer, 20));
}

char	*pp(char *major)
{
	char			b[20];
	char			a[20];
	unsigned int	len;

	p(a, " - ");
	p(b, " - ");
	strcpy(major, a);

	len = strlen(major;

	buffer[len] = ' ';
	buffer[len + 1] = 0;
	return (strcat(major, b));
}

int		main()
{
	char	major[42]; 

	pp(major);
	puts(major);
	return (0);
}